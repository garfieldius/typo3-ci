Host *
    UserKnownHostsFile /dev/null
    StrictHostKeyChecking no
    Compression no
    ForwardAgent no
    PasswordAuthentication no
    ConnectTimeout 60
    GlobalKnownHostsFile /dev/null
    KbdInteractiveAuthentication no
    ControlMaster auto
    ControlPath /tmp/%r@%h:%p
    ControlPersist 300
